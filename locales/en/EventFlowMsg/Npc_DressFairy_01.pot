msgid "No, thanks."
msgstr ""

msgctxt "0002"
msgid "Yes, please."
msgstr ""

msgctxt "0003"
msgid "Never mind."
msgstr ""

msgctxt "0004"
msgid "Take a look."
msgstr ""

