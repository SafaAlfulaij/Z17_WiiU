msgctxt "0001"
msgid "Not today."
msgstr ""

msgctxt "0002"
msgid "OK!"
msgstr ""

msgctxt "0003"
msgid "I should be going."
msgstr ""

msgctxt "0004"
msgid "No way."
msgstr ""

msgctxt "0007"
msgid "Yes."
msgstr ""

msgctxt "0008"
msgid "Is there a trick to this?"
msgstr ""

msgctxt "0009"
msgid "I'm out."
msgstr ""

msgctxt "0010"
msgid "Actually, no."
msgstr ""

msgctxt "near00"
msgid "Here we go..."
msgstr ""

