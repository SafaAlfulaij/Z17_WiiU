msgctxt "Near06"
msgid "<1.so><2.se_co>BLOOD!<3.re_co>"
msgstr ""

#. 1: sound2
#. 2: set_colour (red)
#. 3: reset_colour
msgctxt "Near07"
msgid "<1.so><2.se_co>Here...it...COMES!<3.re_co>"
msgstr ""

