msgid "Teach me a recipe."
msgstr ""

msgctxt "0007"
msgid "Lavish meat dish"
msgstr ""

msgctxt "0008"
msgid "Ancient meat dish"
msgstr ""

msgctxt "0009"
msgid "Ultimate survival dish"
msgstr ""

msgctxt "0010"
msgid "That sounds gross."
msgstr ""

msgctxt "0011"
msgid "Never mind."
msgstr ""

msgctxt "0012"
msgid "Who are YOU?"
msgstr ""

msgctxt "0013"
msgid "Your smoke signal?"
msgstr ""

#. 1: sound2
msgctxt "Talk006"
msgid "<1.so>A tablespoon of rock salt!"
msgstr ""

#. 1: sound2
#. 2: text_size
#. 3: text_size
msgctxt "Talk007"
msgid "<1.so><2.te_si>Zzz... Needs more salt... Nooo, too much salt...<3.te_si>"
msgstr ""

#. 1: sound2
msgctxt "Talk008"
msgid "<1.so>Now add some Lynel guts!"
msgstr ""

#. 1: sound2
msgctxt "Talk009"
msgid "<1.so>Luminous stone to taste!"
msgstr ""

#. 1: sound2
msgctxt "Talk010"
msgid "<1.so>Now add an ancient gear!"
msgstr ""

