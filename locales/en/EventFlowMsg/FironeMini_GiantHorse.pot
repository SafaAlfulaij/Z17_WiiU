msgid "Leave it to me."
msgstr ""

msgctxt "0001"
msgid "I'm not interested."
msgstr ""

msgctxt "0002"
msgid "Giant horse?"
msgstr ""

msgctxt "0003"
msgid "Monsters?"
msgstr ""

msgctxt "0004"
msgid "Go ahead."
msgstr ""

msgctxt "Near00"
msgid "So...big..."
msgstr ""

msgctxt "Near01"
msgid "Zzz..."
msgstr ""

msgctxt "Near02"
msgid "Ohhh..."
msgstr ""

