#. 1: sound
#. 2: choice
msgctxt "talk00"
msgid "<1.so>...Can I help you?<2.ch>"
msgstr ""

#. 1: sound
#. 2: pause (short)
msgctxt "talk01"
msgid "<1.so>Never mind.<2.pa> Forget it."
msgstr ""

#. 1: sound
msgctxt "talk02"
msgid "<1.so>Good-bye."
msgstr ""

