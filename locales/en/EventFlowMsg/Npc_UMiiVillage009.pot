#. 2: text_size
#. 3: pause (short)
#. 4: text_size
msgctxt "talk27"
msgid "<1.so><2.te_si>Haah... <3.pa>What can I do...<4.te_si>"
msgstr ""

#. 1: sound
#. 2: pause (short)
msgctxt "talk28"
msgid ""
"<1.so>What a beautiful sunset...<2.pa>\n"
"My soul feels cleansed."
msgstr ""

#. 1: sound
msgctxt "talk29"
msgid "<1.so>I'm so glad I was able to sunbathe today."
msgstr ""

